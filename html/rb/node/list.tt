[% META
 title="List nodes"
 level = 20
%]

[% USE Sorted_table('name');
   search_result = searchobj.result.resort(order,direction);
   IF q.param('limit');
      CALL search_result.set_page_size(q.param('limit'));
   END;
%]

[% c = 0;
   hidden( "list_pred", 'id');
   hidden( "list_pred", 'desig');
   UNLESS q.param("header_0");
     CALL q.param("header_0",'is [adirect]');
   END;
   WHILE 1;
     IF q.param("header_$c");
       headers.$c = q.param("header_$c");
     ELSE;
       LAST;
     END;
     hidden( "list_pred", headers.$c);
     c = c+1;
   END;
%]


<p>
  [% c = 0 %]
  [% WHILE( c < 10 ) %]
    [% input("header_$c", '', label=c) %]<br/>
    [% c = c+1 %]
  [% END %]
  [% input('limit',search_result.page_size, label='Pagelimit',size=10) %]<br/>
  [% submit(loc('Update')) %]
  [% go('Export to excel', me, 'search_to_excel') %]
</p>


<p>[% search_result.size %] [%+ loc("hits") %].</p>

<p align="center">[% search_result.pagelist %]</p>

<table class="admin">
  <tr>
    <th>[% sort('id','id') %]</th>
    <th>[% sort('desig','desig') %]</th>
    [% FOREACH n IN headers.keys.sort %]
      <th>[% sort(headers.$n, headers.$n) %]</th>
    [% END %]
  </tr>
  [% FOREACH node IN search_result.from_page %]
    <tr>
      <td>[% node.id %]</td>
      <td>[% node.wu_jump %]</td>
      [% FOREACH n IN headers.keys.sort %]
        <td>[% res=node.parse_prop(headers.$n);IF res.can('desig');res.desig|html; ELSE; res|html; END %]</td>
      [% END %]
    </tr>
  [% END %]
</table>

<p align="center">[% search_result.pagelist %]</p>
