*]
[%
   IF admin_mode;
      jump("Edit", "$home/admin/translation/page_part.tt", run='mark', nid=[* node.id *]);
      ": ";
   END;
%]
[*
   SET gloc.$name = node.description.loc(a1,a2,a3,a4,a5);
END;
*]
